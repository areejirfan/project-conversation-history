<div class="max-w-4xl mx-auto mt-10">
  <h1 class="text-2xl font-bold text-gray-700 text-center mb-6">Projects</h1>

  <div class="overflow-x-auto bg-white shadow-md rounded-lg">
    <table class="w-full table-auto border-collapse border border-gray-300">
      <thead>
        <tr class="bg-gray-200 text-gray-700 uppercase text-sm leading-normal">
          <th class="py-3 px-6 text-left border">ID</th>
          <th class="py-3 px-6 text-left border">Title</th>
          <th class="py-3 px-6 text-left border">Created At</th>
          <th class="py-3 px-6 text-center border">Actions</th>
        </tr>
      </thead>
      <tbody class="text-gray-600 text-sm font-light">
        <% @projects.each do |project| %>
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="py-3 px-6 border"><%= project.id %></td>
            <td class="py-3 px-6 border"><%= link_to project.title, project_path(project), class: "text-blue-500 hover:underline" %></td>
            <td class="py-3 px-6 border"><%= project.created_at.strftime("%b %d, %Y") %></td>
            <td class="py-3 px-6 text-center border space-x-2">
                <%= link_to "View", project_path(project), class: "text-green-500 hover:underline" %>
                <%= link_to "Edit", edit_project_path(project), class: "text-yellow-500 hover:underline" %>
                <%= link_to "Delete", project, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="text-center mt-4">
    <%= link_to "New Project", new_project_path, class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition duration-200" %>
  </div>
</div>
