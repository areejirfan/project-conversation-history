<%= form_with model: @project, local: true, class: "max-w-lg mx-auto mt-10 bg-white p-8 rounded-lg shadow-md space-y-4" do |form| %>
  
    <h2 class="text-2xl font-bold text-gray-700 text-center">Create Project</h2>
  
   <div>
      <%= form.label :title, class: "block text-gray-700 font-semibold mb-2" %>
      <%= form.text_field :title, class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
      
      <% @project.errors.full_messages_for(:title).each do |message| %>
        <div class="text-red-500 text-sm mt-1"><%= message %></div>
      <% end %>
    </div>
      <div>
      <%= form.label :status, class: "block text-gray-700 font-semibold mb-2" %>
      <%= form.select :status, Project.statuses.keys.map { |status| [status.humanize, status] }, {}, class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
      
      <% @project.errors.full_messages_for(:status).each do |message| %>
        <div class="text-red-500 text-sm mt-1"><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :description, class: "block text-gray-700 font-semibold mb-2" %>
      <%= form.text_area :description, rows: 4, class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
  
      <% @project.errors.full_messages_for(:description).each do |message| %>
        <div class="text-red-500 text-sm mt-1"><%= message %></div>
      <% end %>
    </div>
  
    <div class="text-center">
      <%= form.submit "Save Project", class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition duration-200" %>
    </div>

  <% end %>
  