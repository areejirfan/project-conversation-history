

<div class="max-w-md mx-auto mt-10 bg-white p-8 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-gray-700 text-center mb-6">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4") do |f| %>
    
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :username, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
    </div>

    <div class="text-center">
      <%= f.submit "Sign up", class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition duration-200" %>
    </div>

  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
