<div class="mt-4 bg-white p-4 rounded-lg shadow-md">
  <h4 class="text-lg font-semibold text-gray-700 mb-2">Add a Comment</h4>
  
  <%= form_with(model: [project, Comment.new], data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }, local: true, class: "space-y-4") do |form| %>
    <div>
      <%= form.label :content, class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.text_area :content, class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300", rows: 3 %>
    </div>

    <div class="text-right">
      <%= form.submit "Post Comment", class: "px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition" %>
    </div>
  <% end %>
</div>
